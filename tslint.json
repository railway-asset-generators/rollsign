{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-last",
                "module-source-path": "full",
                "grouped-imports": true,
                "named-imports-order": "lowercase-last"
            }
        ],
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": [
            true,
            2
        ],
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        },
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "imports": "always",
                    "exports": "always",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-module",
                "check-separator",
                "check-rest-spread",
                "check-type",
                "check-typecast",
                "check-type-operator",
                "check-preblock"
            ]
        },
        "semicolon": [
            true,
            "always",
            "ignore-interfaces",
            "strict-bound-class-methods"
        ],
        "triple-equals": true,
        "no-magic-numbers": true,
        "no-console": false,
        "no-constant-condition": true,
        "no-extra-semi": true,
        "no-unexpected-multiline": true,
        "no-irregular-whitespace": true,
        "no-multi-spaces": [
            true,
            {
                "exceptions": {
                    "PropertyAssignment": false
                }
            }
        ],
        "array-bracket-spacing": [
            true,
            "never"
        ],
        "no-extra-boolean-cast": true,
        "block-spacing": [
            true,
            "always"
        ],
        "brace-style": [
            true,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "ter-func-call-spacing": [
            true,
            "never"
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "ter-padded-blocks": [
            true,
            "never"
        ],
        "ter-arrow-parens": [
            true,
            "always"
        ],
        "ter-arrow-spacing": [
            true
        ],
        "object-curly-spacing": [
            true,
            "always"
        ]
    }
}
